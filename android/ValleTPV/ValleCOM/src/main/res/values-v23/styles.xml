<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.ValleCOM" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/pink_pressed</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/pink</item>
        <!-- Configuración específica para Android 6.0+ (API 23+) -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/pink</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Configuración adicional para forzar el color -->
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>
