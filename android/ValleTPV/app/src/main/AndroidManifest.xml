<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity
            android:name=".ValleTPV"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Arqueo"
            android:exported="true"
            android:label="@string/title_activity_arqueo"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PreferenciasTPV"
            android:exported="true"
            android:label="@string/title_activity_preferencias_tpv"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Camareros"
            android:exported="false"
            android:label="@string/title_activity_camareros"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Mesas"
            android:label="@string/title_activity_mesas"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Cuenta"
            android:label="@string/title_activity_cuenta"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="landscape" />
        <activity
            android:name=".OpMesas"
            android:label="@string/title_activity_op_mesas"
            android:screenOrientation="landscape" />

        <service
            android:name=".tools.ServicioCom"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>