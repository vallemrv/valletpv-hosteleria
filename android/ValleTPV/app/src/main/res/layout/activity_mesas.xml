<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valleapp.valletpv.Mesas"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/relativeLayout"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="376dp"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:text="@string/camarero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/add_camareros"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="270dp"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/add_camareros"
            android:onClick="clickAddCamareros"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/add_camareros" />

        <ImageButton
            android:id="@+id/btn_mensajes"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="361dp"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/boton_mensajes"
            android:onClick="clickSendMensajes"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/sobre" />

        <ImageButton
            android:id="@+id/btnSettings"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="180dp"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/settings"
            android:onClick="clickSettings"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/settings"
            android:text="@string/settings" />

        <ImageButton
            android:id="@+id/btnOpenCaja"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/boton_abrir_caja"
            android:onClick="clickAbrirCaja"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/abrircajon"
            android:text="@string/abrir_ncajon" />

        <ImageButton
            android:id="@+id/btnListadoTicket"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/btnOpenCaja"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/boton_listado_ticket"
            android:onClick="clickListaTicket"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/listaticket"
            android:text="@string/lista_nticket" />


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout"
        android:background="#fffff1ea"
        android:baselineAligned="false">

        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="0.9"
            android:background="@android:color/white"
            android:contentDescription="@string/teclado_mesas">

            <TableLayout
                android:id="@+id/pneMesas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"></TableLayout>

        </ScrollView>

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"

            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:background="@android:color/white"
            android:contentDescription="@string/teclado_mesas">

            <LinearLayout
                android:id="@+id/pneZonas"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>
