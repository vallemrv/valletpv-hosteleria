<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dip">

    <EditText
        android:id="@+id/txtCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/cantidad_de_monedas"
        android:importantForAutofill="no"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="35sp" />

    <EditText
        android:id="@+id/txtMoneda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCantidad"
        android:layout_alignEnd="@+id/btn_salir_monedas"
        android:ems="10"
        android:hint="@string/moneda"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textSize="35sp" />

    <ImageButton
        android:id="@+id/btn_salir_monedas"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtMoneda"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/fondo_btn_xml"
        android:contentDescription="@string/salir"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/salir"
        android:textSize="35sp" />

    <ImageButton
        android:id="@+id/btn_aceptar_monedas"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/txtMoneda"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/btn_salir_monedas"
        android:background="@drawable/fondo_btn_xml"
        android:contentDescription="@string/ok"
        android:padding="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/check"
        android:text="@string/ok"
        android:textSize="35sp" />
</RelativeLayout>
