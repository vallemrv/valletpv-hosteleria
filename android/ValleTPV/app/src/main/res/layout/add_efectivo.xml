<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/txtCantidad"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:hint="Cantidad de monedas"
            android:textSize="35sp"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtMoneda"
            android:hint="Moneda"
            android:layout_below="@+id/txtCantidad"
            android:layout_alignEnd="@+id/btnSalir"
            android:textSize="35sp"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnSalir"
            android:layout_below="@+id/txtMoneda"
            android:layout_alignParentEnd="true"
            android:background="@drawable/fondo_btn_xml"
            android:scaleType="fitXY"
            android:padding="10dp"
            android:src="@drawable/salir"
            android:layout_margin="5dp"
            android:textSize="35sp"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="OK"
            android:id="@+id/btn_varios_aceptar"
            android:layout_toStartOf="@+id/btnSalir"
            android:layout_below="@+id/txtMoneda"
            android:layout_toLeftOf="@+id/btnSalir"
            android:background="@drawable/fondo_btn_xml"
            android:scaleType="fitXY"
            android:layout_margin="5dp"
            android:src="@drawable/check"
            android:padding="10dp"
            android:textSize="35sp"/>
    </RelativeLayout>
</LinearLayout>