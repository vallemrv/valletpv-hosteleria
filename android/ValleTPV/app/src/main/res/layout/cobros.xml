<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="700dp"
        android:layout_height="350dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.70"
                android:textAppearance="?android:attr/textAppearanceLarge">


                <TextView
                    android:id="@+id/lblTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Total cuenta"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/entrega"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblTotal"
                    android:layout_marginTop="15dp"
                    android:text="Entrega"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/entrega"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dip"
                    android:text="Cambio"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/lblPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:text="3.00 €"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/lblEntrega"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblPrecio"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    android:text="0.00 €"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/lblCambio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblEntrega"
                    android:layout_alignParentEnd="false"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:text="0.00 €"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">


                <ImageButton
                    android:id="@+id/btnEfectivo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:src="@drawable/cobrar"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:text="New Button" />

                <ImageButton
                    android:id="@+id/btnTarjeta"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:src="@drawable/tarjeta"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    />

                <ImageButton
                    android:id="@+id/btn_salir"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:src="@drawable/salir"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:text="New Button" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pneBotonera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="1"
                    android:text="1"
                    android:textSize="50dp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="2"
                    android:text="2"
                    android:textSize="50sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="3"
                    android:text="3"
                    android:textSize="50sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="4"
                    android:text="4"
                    android:textSize="50sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="5"
                    android:text="5"
                    android:textSize="50sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="6"
                    android:text="6"
                    android:textSize="50sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="7"
                    android:text="7"
                    android:textSize="50sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="8"
                    android:text="8"
                    android:textSize="50sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="9"
                    android:text="9"
                    android:textSize="50sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="."
                    android:text="."
                    android:textSize="50sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="0"
                    android:text="0"
                    android:textSize="50sp" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/fondo_btn_xml"
                    android:tag="C"
                    android:text="C"
                    android:textSize="50sp" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
