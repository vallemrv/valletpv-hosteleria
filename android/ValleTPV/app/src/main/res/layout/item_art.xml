<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblCan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="center_vertical|end"
        android:padding="10dp"
        android:text="@string/texto_prueba_can"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:text="@string/texto_prueba"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lblPrecio"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.4"
            android:paddingBottom="5sp"
            android:text="@string/texto_prueba_euros"
            android:textSize="12sp"
            android:visibility="visible" />

    </LinearLayout>


    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center_vertical|end"
        android:paddingTop="10dp"
        android:text="@string/texto_prueba_euros"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1">

        <ImageButton
            android:id="@+id/btn_borrar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/borrar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/papelera"
            android:text="@string/borrar" />
    </FrameLayout>

</LinearLayout>