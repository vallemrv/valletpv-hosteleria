<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/pneVarios">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/relativeLayout">

        <EditText
            android:id="@+id/txt_varios_precio"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/txt_varios_can"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="false"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_toStartOf="@+id/btn_varios_aceptar"
            android:gravity="bottom"
            android:hint="Precio"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/txt_varios_can"
            android:layout_width="50dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:hint="1"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/txt_varios_nombre"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/txt_varios_can"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/txt_varios_can"
            android:hint="Varios" />



        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="OK"
            android:id="@+id/btn_varios_aceptar"
            android:layout_toLeftOf="@+id/btn_varios_salir"
            android:layout_alignTop="@+id/txt_varios_precio"
            android:background="@drawable/fondo_btn_xml"
            android:src="@drawable/check"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"/>

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/btn_varios_salir"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="false"
            android:layout_alignTop="@+id/txt_varios_precio"
            android:background="@drawable/fondo_btn_xml"
            android:src="@drawable/salir"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"/>
    </RelativeLayout>

</RelativeLayout>