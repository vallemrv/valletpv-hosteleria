<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <EditText
            android:id="@+id/txtDescripcion"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="DescripciÃ³n"
            android:minHeight="48dp"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/txtImporte"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDescripcion"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="Importe"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/Salir"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/txtImporte"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/borrar_ok"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/salir" />

        <ImageButton
            android:id="@+id/Aceptar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/txtImporte"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/Salir"
            android:layout_toLeftOf="@+id/Salir"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/borrar_ok"
            android:padding="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/check"
            android:text="OK" />
    </RelativeLayout>
</LinearLayout>