<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <TextView
        android:id="@+id/tvTituloMantenimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantenimiento Cashlogy"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutBotonesMantenimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tvTituloMantenimiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnConsultarBilletes"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="Consultar billetes faltantes"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/purple_700"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnResetearContador"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="Resetear contador mantenimiento"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/purple_700"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnRegistrarCorreas"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:text="Registrar mantenimiento correas"
            android:backgroundTint="@color/purple_700"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvRespuestaCashlogy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="20sp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/layoutBotonesMantenimiento"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>