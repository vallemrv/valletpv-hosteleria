<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="ui.home.HomeFragment">

    <!-- Contenedor para Total Cambio -->
    <LinearLayout
        android:id="@+id/layout_total_cambio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ImageButton para Dispensar Cambio -->

        <TextView
            android:id="@+id/text_total_recicladores"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Total Cambio"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <!-- Contenedor para Total Almacén -->
    <LinearLayout
        android:id="@+id/layout_total_almacen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
       android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_total_cambio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ImageButton para Modificar Cambio -->

        <TextView
            android:id="@+id/text_total_stacker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Total Almacén"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="0.8" />

    </LinearLayout>

    <!-- Botón de Salir posicionado en la parte inferior derecha -->
    <Button
        android:id="@+id/button_salir_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Salir"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:minWidth="100dp"
        android:backgroundTint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
