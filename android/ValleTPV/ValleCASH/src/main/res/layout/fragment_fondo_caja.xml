<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="ui.home.HomeFragment">

    <!-- Contenedor para Total Cambio -->
    <LinearLayout
        android:id="@+id/layout_total_cambio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/purple_500"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ImageButton para Dispensar Cambio -->

        <TextView
            android:id="@+id/text_total_cambio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Total Cambio"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <ImageButton
            android:id="@+id/button_aceptar_cambo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/purple_700"
            android:contentDescription="Dispensar cambio"
            android:scaleType="centerInside"
            android:layout_gravity="end"
            android:src="@drawable/insertar_camibo_mano"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Contenedor para Total Almacén -->
    <LinearLayout
        android:id="@+id/layout_total_almacen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
            android:background="@color/purple_500"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_total_cambio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ImageButton para Modificar Cambio -->

        <TextView
            android:id="@+id/text_total_almacen"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="Total Almacén"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_weight="0.8" />

        <ImageButton
            android:id="@+id/buttton_retirar_stacker"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/purple_700"
            android:contentDescription="Modificar cambio"
            android:layout_gravity="end"
            android:scaleType="centerInside"
            android:src="@drawable/retirar_cambio"
            app:tint="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cambio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_total_almacen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/edittext_cambio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:padding="5dp"
            android:hint="Cambio"
            android:textColor="@color/white"
            android:inputType="numberDecimal"
            android:textSize="20sp"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/button_change_cambio"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/purple_700"
            android:contentDescription="Cambiar Cambio"
            android:scaleType="centerInside"
            android:layout_gravity="end"
            android:src="@drawable/ok"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Contenedor para Almacén Anterior -->
    <LinearLayout
        android:id="@+id/layout_almacen_anterior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:padding="5dp"
        android:background="@color/purple_500"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_cambio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_almacen_anterior"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Almacén Anterior"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>

    <!-- Contenedor para Cambio Real -->
    <LinearLayout
        android:id="@+id/layout_cambio_real"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/purple_500"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_almacen_anterior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/text_cambio_real"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="Cambio Real"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </LinearLayout>



    <!-- Cuadro para Mensajes -->
    <TextView
        android:id="@+id/text_message_box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="@android:color/white"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/layout_cambio_real"
        app:layout_constraintBottom_toTopOf="@id/progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Indicador de Carga -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/text_message_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
