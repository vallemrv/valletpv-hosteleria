<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/Theme.ValleTPV"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="36">

    <activity
        android:name=".ValleTPV"
        android:exported="true">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity
        android:name=".Arqueo"
        android:exported="true"
        android:label="@string/title_activity_arqueo" />
    <activity
        android:name=".PreferenciasTPV"
        android:exported="true"
        android:label="@string/title_activity_preferencias_tpv" />
    <activity
        android:name=".Camareros"
        android:exported="false"
        android:label="@string/title_activity_camareros" />
    <activity
        android:name=".Mesas"
        android:label="@string/title_activity_mesas" />
    <activity
        android:name=".Cuenta"
        android:label="@string/title_activity_cuenta"
        android:windowSoftInputMode="adjustResize" />
    <activity
        android:name=".OpMesas"
        android:label="@string/title_activity_op_mesas" />
    <activity
        android:name=".tpvcremoto.CobroTarjetaActivity"
        android:label="@string/cobroscontarjeta" />
    <activity
        android:name=".cashlogyActivitis.CobroCashlogyActivity"
        android:label="@string/cobro_por_cashlgoy" />
    <activity
        android:name=".cashlogyActivitis.CambioCashlogyActivity"
        android:label="@string/cambio_cashlogy" />
    <activity
        android:name=".cashlogyActivitis.ArqueoCashlogyActivity"
        android:label="@string/arqueo_de_caja" />

    <service
        android:name="com.valleapp.valletpv.tools.ServiceTPV"
        android:enabled="true"
        android:exported="false"
        android:foregroundServiceType="dataSync" />
</application>
    </manifest>