<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="560sp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/txt_info_borrar"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.2"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnInv"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_btn_xml"
            android:text="@string/borrar_invitacion" />

        <Button
            android:id="@+id/btnSimpa"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_btn_xml"
            android:text="@string/simpa" />

        <Button
            android:id="@+id/btnError"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_marginTop="-5sp"
            android:background="@drawable/fondo_btn_xml"
            android:singleLine="false"

            android:text="@string/error_pedido" />

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/borrar_editar"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/editar" />

        <ImageButton
            android:id="@+id/btn_salir_monedas"
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/borrar_salir"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/salir" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/pneEditarMotivo"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.4"
        android:padding="5sp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtMotivo"
            android:layout_width="0sp"
            android:layout_weight=".78"
            android:layout_height="100sp"
            android:layout_gravity="bottom"
            android:autofillHints="Motivo"
            android:hint="@string/editar_motivo"
            android:inputType="text"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="90sp"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:layout_weight=".18"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/ok"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/check"
            android:text="@string/ok" />

    </LinearLayout>

</LinearLayout>