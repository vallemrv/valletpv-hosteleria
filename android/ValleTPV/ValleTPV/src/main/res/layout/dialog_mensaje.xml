<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enviar_mensaje"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:background="@drawable/bg_pink"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/txt_mensaje"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_weight="0.15"
        android:autofillHints=""
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/mensaje"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColorHint="#0C0C0C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/lista_camareros_notificables"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="92dp">

        <ImageButton
            android:id="@+id/btn_salir_mensajes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/fondo_btn_xml"
            android:contentDescription="@string/borrar_salir"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/salir"
            android:text="@string/salir"
            android:textSize="32sp" />
    </FrameLayout>

</LinearLayout>