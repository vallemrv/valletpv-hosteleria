<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_pink"
        android:gravity="center"
        android:padding="14dp"
        android:text="@string/arqueo_de_caja"
        android:textColor="@android:color/black"
        android:textSize="52sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@drawable/bg_pink"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/conteo_monedas"
                android:textSize="25sp" />

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/lista_efectivo">

                <LinearLayout
                    android:id="@+id/pneEfectivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />


            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="70sp"
                android:layout_margin="10sp"
                android:background="@drawable/bg_pink"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/gastos"
                android:textSize="25sp" />

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:contentDescription="@string/lista_efectivo">

                <LinearLayout
                    android:id="@+id/pneGastos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:orientation="vertical" />

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="80dp">


                <ImageButton
                    android:id="@+id/btnSalir"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="93dp"
                    android:background="@drawable/fondo_btn_xml"
                    android:contentDescription="@string/abrir_ncajon"
                    android:onClick="clickAbrirCaja"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/salir"
                    />

                <ImageButton
                    android:id="@+id/btnOpenCaja"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/fondo_btn_xml"
                    android:contentDescription="@string/abrir_ncajon"
                    android:onClick="clickAbrirCaja"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/abrircajon"
                    />

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_pink"
                android:onClick="addEfectivo"
                android:text="@string/agregar_efectivo"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_pink"
                android:onClick="addGastos"
                android:text="@string/agregar_gastos"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_pink"
                android:onClick="editCambio"
                android:text="@string/modificar_cambio"
                android:textColor="#000000" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_pink"
                android:onClick="arquearCaja"
                android:text="@string/arqueo_de_caja"
                android:textColor="#000000" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="#ff4cff0e"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/lblTarifa"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/efectivo"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/lblEfectivo"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/lblTarifa"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:text="@string/texto_euros_cero"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="#ffff180e"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/gastos_arqueo"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/lblGastos"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView3"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:text="@string/texto_euros_cero"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="#ffc7ca87"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/texto_cambio"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/lblCambio"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textView1"
                    android:layout_alignParentEnd="true"

                    android:gravity="end"
                    android:text="@string/texto_euros_cero"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>