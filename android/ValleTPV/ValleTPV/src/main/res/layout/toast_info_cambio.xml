<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_info_cobro_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/info_cobro_bg"
    android:orientation="vertical"
    android:padding="10sp">

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:id="@+id/label_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:minHeight="48dp"
        android:text="@string/cobro_info"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="32sp"
        android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_entrega"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/label_entrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/entrega"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_info_entrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:minWidth="150dp"
            android:text="@string/texto_prueba_euros"
            android:textSize="32sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_cambio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/label_cambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/cambio"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_info_cambio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:minWidth="150dp"
            android:text="@string/texto_prueba_euros"
            android:textColor="#000000"
            android:textSize="32sp" />
    </LinearLayout>

</LinearLayout>