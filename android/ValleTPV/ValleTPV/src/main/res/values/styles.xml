<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema principal de la aplicación -->
    <style name="Theme.ValleTPV" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button.ValleTPV</item>
        <item name="android:textViewStyle">@style/Widget.MaterialComponents.TextView.ValleTPV</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:dialogTheme">@style/Theme.ValleTPV.Dialog</item>
        <item name="dialogTheme">@style/Theme.ValleTPV.Dialog</item>
    </style>

    <!-- Estilo para los diálogos -->
    <style name="Theme.ValleTPV.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowTitleStyle">@style/Theme.ValleTPV.Dialog.Title</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Estilo para el título del diálogo -->
    <style name="Theme.ValleTPV.Dialog.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Estilos personalizados para widgets -->
    <style name="Widget.MaterialComponents.Button.ValleTPV" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/pink</item> <!-- Normal state color -->
        <item name="rippleColor">@color/pink_pressed</item> <!-- Pressed/ripple color -->
        <item name="android:textColor">@color/black</item> <!-- Text color -->
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Widget.MaterialComponents.TextView.ValleTPV" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>