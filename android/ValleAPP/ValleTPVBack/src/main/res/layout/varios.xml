<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_varios_precio"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/txt_varios_can"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/btn_guardar_preferencias"
        android:gravity="bottom"
        android:hint="@string/precio"
        android:importantForAutofill="no"
        android:inputType="numberDecimal"
        android:textColorHint="#302A28" />

    <EditText
        android:id="@+id/txt_varios_can"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:hint="@string/texto_prueba_can"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txt_varios_nombre"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/txt_varios_can"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_toEndOf="@+id/txt_varios_can"
        android:autofillHints=""
        android:hint="@string/varios"
        android:inputType="text|textAutoComplete"
        android:textColorHint="#423936" />


    <ImageButton
        android:id="@+id/btn_guardar_preferencias"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/txt_varios_precio"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/btn_varios_salir"
        android:background="@drawable/fondo_btn_xml"
        android:contentDescription="@string/ok"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/check"
        android:text="@string/ok" />

    <ImageButton
        android:id="@+id/btn_varios_salir"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/txt_varios_precio"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/fondo_btn_xml"
        android:contentDescription="@string/borrar_salir"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/salir" />
</RelativeLayout>

