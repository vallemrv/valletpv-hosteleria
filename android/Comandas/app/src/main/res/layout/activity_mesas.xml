<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valleapp.comandas.Mesas"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/lblTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:text="@string/camarero"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="15dp"
            android:layout_marginStart="5dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/scrollView4"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="2dp"

            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:background="@android:color/white"
            android:contentDescription="@string/lista"
            android:layout_marginStart="2dp">

            <LinearLayout
                android:id="@+id/pneZonas"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.9">

            <android.support.v4.view.PagerTabStrip
                android:id="@+id/pager_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

        </android.support.v4.view.ViewPager>


    </LinearLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_send_mensaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="22dp"
        android:onClick="mostrarSendMensajes"
        fab:fab_colorNormal="@color/pink"
        fab:fab_colorPressed="@color/pink_pressed"
        fab:fab_icon="@drawable/reconect" />


    <FrameLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="152dp"
            android:layout_height="118dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="bottom|center_horizontal"
            android:text="@string/inicializando" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/show_autorias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="bottom|center_horizontal">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_show_autorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="22dp"
            android:contentDescription="@string/show"
            android:onClick="mostrarAutorias"
            fab:fab_colorNormal="@color/pink"
            fab:fab_colorPressed="@color/pink_pressed"
            fab:fab_icon="@drawable/sobre" />

        <RelativeLayout
            android:id="@+id/view"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="85sp"
            android:background="@drawable/fondo_redondo_btn_xml" >

            <TextView
                android:id="@+id/txt_num_autorias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/test_cantidad" />
        </RelativeLayout>


    </FrameLayout>


</RelativeLayout>
