<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:onClick="clickMoverArt"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/btnPedir"
        android:layout_width="0sp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:gravity="center_vertical"
        android:longClickable="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="15dp">


        <TextView
            android:id="@+id/lblCantidad"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal|center_vertical"
            android:padding="2sp"
            android:text="@string/test_cantidad"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/lblNombre"
            android:layout_width="609dp"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/lblCantidad"
            android:layout_toEndOf="@+id/lblCantidad"
            android:layout_toRightOf="@+id/lblCantidad"
            android:gravity="center_vertical"
            android:padding="2sp"
            android:text="@string/texto_prueba"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.12">

        <ImageButton
            android:id="@+id/btnCambiar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/fondo_redondeado_btn_xml"
            android:contentDescription="@string/cambiar_linea"
            android:onClick="clickCambiar"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cambiarmesa" />
    </FrameLayout>

</LinearLayout>