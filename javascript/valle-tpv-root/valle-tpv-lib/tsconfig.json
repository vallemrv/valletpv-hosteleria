{
  "compilerOptions": {
    // --- ¡CAMBIO 1: Habilitar modo 'composite' para que otros puedan referenciarlo! ---
    "composite": true,
    // --- ¡CAMBIO 2: Recomendado para mejor navegación en el IDE (Ctrl+Click)! ---
    "declarationMap": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist/types",
    "module": "ESNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "noEmit": false,
    "strict": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "isolatedModules": true,
    "types": ["vite/client", "vue"],
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}